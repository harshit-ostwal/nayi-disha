generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String?
  mobileNo  String
  email     String  @unique
  age       Int?    @default(0)
  gender    Gender? @default(MALE)
  status    Status? @default(ACTIVE)
  role      Role?   @default(USER)
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
  GUEST
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
  SUSPENDED
  DELETED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
